generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// 1 - Crie uma tabela Task com "id" autoincrement e com descrição.

model Task {
  id          Int    @id @default(autoincrement())
  description String
}
